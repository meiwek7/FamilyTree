<Window x:Class="Client.View.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View"
        xmlns:vm="clr-namespace:Client.ViewModel"
        xmlns:w="clr-namespace:Client.Infrastructure"
        xmlns:Behaviors="clr-namespace:Client.ViewModel.Behaviors"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="Family Tree | Authorization" Height="220" Width="350" ResizeMode ="NoResize">
    <Window.DataContext>
        <vm:AuthorizationViewModel></vm:AuthorizationViewModel>
    </Window.DataContext>
    <Window.Resources>
        <ControlTemplate x:Key="TextBoxBaseControlTemplate"
                         TargetType="{x:Type TextBoxBase}">
            <Border Background="{TemplateBinding Background}" 
                    x:Name="Bd" 
                    BorderBrush="Black"
                    BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                <ScrollViewer x:Name="PART_ContentHost"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" TargetName="Bd"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </Trigger>
                <Trigger Property="Width" Value="Auto">
                    <Setter Property="MinWidth" Value="100"/>
                </Trigger>
                <Trigger Property="Height" Value="Auto">
                    <Setter Property="MinHeight" Value="20"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <Style x:Key="MyFocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Control}">
                        <Grid Margin="3 2">
                            <Rectangle Name="r1" StrokeThickness="1" Stroke="Black" StrokeDashArray="2 2"/>
                            <Border Name="border" Width="{TemplateBinding ActualWidth}" Height="{TemplateBinding ActualHeight}"  CornerRadius="2" BorderThickness="1" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ShadowStyle">
            <Setter Property="Control.Foreground" Value="LightGray" />
        </Style>

        <Style x:Key="InformButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="FontSize" Value="11px"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FocusVisualStyle" Value="{StaticResource MyFocusVisual}" />
            <Setter Property="Background" >
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                        <GradientStop Color="#FFFFD190" Offset="0.2"/>
                        <GradientStop Color="Orange" Offset="0.85"/>
                        <GradientStop Color="#FFFFD190" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
        				BorderThickness="1"
        				Padding="4,2" 
        				BorderBrush="DarkGray" 
        				CornerRadius="3" 
        				Background="{TemplateBinding Background}">
                            <Grid >
                                <ContentPresenter HorizontalAlignment="Center" 
        	                           VerticalAlignment="Center" Name="contentShadow" 
        					Style="{StaticResource ShadowStyle}">
                                    <ContentPresenter.RenderTransform>
                                        <TranslateTransform X="1.0" Y="1.0" />
                                    </ContentPresenter.RenderTransform>
                                </ContentPresenter>
                                <ContentPresenter HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" Name="content"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF4788c8" />
                                <Setter Property="Foreground" Value="#FF4788c8" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" >
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                                            <GradientStop Color="#FFFFD190" Offset="0.35"/>
                                            <GradientStop Color="Orange" Offset="0.95"/>
                                            <GradientStop Color="#FFFFD190" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="content" Property="RenderTransform" >
                                    <Setter.Value>
                                        <TranslateTransform Y="1.0" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsDefaulted" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF282828" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF282828" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.7" />
                                <Setter Property="Foreground" Value="Gray" />
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0"
               Grid.RowSpan="5"
               Grid.ColumnSpan="8">
            <Label.Background>
                <ImageBrush ImageSource="Resources\bg_1.jpg"></ImageBrush>
            </Label.Background>
        </Label>

        <Label Grid.ColumnSpan="7">
            <Label.Background>
                <ImageBrush ImageSource="Resources\bg_darkwood_2.jpg"></ImageBrush>
            </Label.Background>
        </Label>
        <Border Grid.Column="3"
                Grid.ColumnSpan="2"
                CornerRadius="10"
                BorderBrush="Aqua"
                BorderThickness="0.1">
            <Border.Background>
                <ImageBrush ImageSource="Resources\family_tree.jpg"></ImageBrush>
            </Border.Background>
        </Border>
        <Label Grid.Row="1" Grid.ColumnSpan="2" Foreground="White" HorizontalAlignment="Left" FontSize="16">Email:</Label>
        <Label Grid.Row="2" Grid.ColumnSpan="2" Foreground="White" HorizontalAlignment="Left" FontSize="16">Password:</Label>
        <Border CornerRadius="10"
                Grid.Row = "1"
                Grid.Column = "2"
                Grid.ColumnSpan = "5"
                BorderBrush="AliceBlue" 
                BorderThickness="2"
                Margin="3">
            <TextBox Margin = "2"
                     Name = "tb_email"
                     Background ="Transparent"
                     BorderThickness="0"
                     Text = "{Binding Path = User.Email, UpdateSourceTrigger=PropertyChanged}"
                     Foreground="White"/>
        </Border>

        <Border CornerRadius="10"
                Grid.Row = "2"
                Grid.Column = "2"
                Grid.ColumnSpan = "5"
                BorderBrush="AliceBlue" BorderThickness="2"
                Margin="3">
            <PasswordBox Margin="2"
                         Name="tb_password"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0">
                <i:Interaction.Behaviors>
                    <Behaviors:PasswordBehavior Password="{Binding Path=User.Password, Mode=TwoWay}"/>
                </i:Interaction.Behaviors>
            </PasswordBox>
        </Border>
        <Popup Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" Grid.RowSpan="1" StaysOpen="False" Placement="Center" PlacementTarget="{Binding ElementName=tb_password}" MaxWidth="180" IsOpen="{Binding Path=PopupPass, UpdateSourceTrigger=PropertyChanged}">
            <TextBox Template="{StaticResource TextBoxBaseControlTemplate}" Text="Пароль введен неправильно" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
        </Popup>
        <Popup Grid.Column="1"
               Grid.Row="1"
               Grid.ColumnSpan="4"
               Grid.RowSpan="1"
               StaysOpen="False"
               Placement="Center"
               PlacementTarget="{Binding ElementName=tb_email}"
               MaxWidth="500"
               IsOpen="{Binding Path=PopupPass, UpdateSourceTrigger=PropertyChanged}">
            <TextBox Template="{StaticResource TextBoxBaseControlTemplate}"
                     Text="Такой E-mail в системе не найден"
                     HorizontalAlignment="Center"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     VerticalAlignment="Center"/>
        </Popup>
        <Button Name="b_register"
                Command="{Binding Path=RegisterCommand}"
                Content="Register"
                Style="{StaticResource InformButton}"
                Grid.Row="4"
                Grid.ColumnSpan="2"
                Margin="5">
        </Button>
        <Button Name="b_enter"
                Margin="5,5,5,5"
                Grid.Row="4"
                Grid.Column="6"
                Grid.ColumnSpan="2"
                Style="{StaticResource InformButton}"
                Command="{Binding Path=EnterCommand}">
            Enter
        </Button>
        <Button Name="b_forgotPass"
                Margin="5,5,5,5"
                Grid.Row="4"
                Grid.Column="3"
                Grid.ColumnSpan="2"
                Style="{StaticResource InformButton}"
                Command="{Binding Path=EnterCommand}">
            Forgot password
        </Button>
    </Grid>
</Window>