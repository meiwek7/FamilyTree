<Window x:Class="Client.View.EnterSmallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.View"
        mc:Ignorable="d"
        Title="EnterHere" Height="82.075" Width="300" ResizeMode ="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Path=Text}" Grid.Row="0" Margin="20,2,20,2"></TextBox>
        <Button Grid.Row="1" Margin="50,5,50,5" Content="OK"></Button>
    </Grid>
</Window>
